@model IEnumerable<Product>

<style>
    .custom-image {
        width: 100%;
        height: 300px; /* Adjust the height as needed */
        object-fit: cover;
        object-position: center;
    }

    .card {
        height: 95%;
    }


    .container {
        margin-top: 20px; /* Adjust the margin-top value as needed */
    }
</style>

</style>

<div class="container">
    @for (var i = 0; i < Model.Count(); i += 4)
    {
        <div class="row pb-3">
            @foreach (var product in Model.Skip(i).Take(4))
            {
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="card mb-4">
                        <img src="@product.ImageUrl" class="card-img-top rounded custom-image" />
                        <div class="card-body">
                            <h5 class="card-title text-primary">@product.Title</h5>
                            <p class="card-text text-info">by <b>@product.Company</b></p>
                            <p class="card-text text-maroon">Price: <b>$@product.Price.ToString("0.00")</b></p>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Details" class="btn btn-primary btn-block" asp-route-productId="@product.Id">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
